{
  "name": "pot-of-gold",
  "version": "1.0.0",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "start:clean": "expo start -c",
    "android": "expo start --android",
    "android:device": "expo run:android --device",
    "android:emulator": "expo run:android",
    "ios": "expo start --ios",
    "ios:device": "expo run:ios --device",
    "ios:simulator": "expo run:ios --simulator=\"iPhone 15 Pro\"",
    "web": "expo start --web",
    "test": "jest --config jest.config.js",
    "test:integration": "node src/tests/IntegrationTests.js",
    "test:security": "jest --testPathPattern=__tests__/security",
    "test:comprehensive": "node scripts/test-comprehensive.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "generate:icons": "node scripts/generate-app-icons.js",
    "generate:screenshots": "node scripts/generate-screenshots.js",
    "generate:assets": "npm run generate:icons && npm run generate:screenshots",
    "generate-art": "npx ts-node --project tsconfig.node.json tools/generate-art.ts",
    "build:ios:dev": "eas build --platform ios --profile development",
    "build:ios:prod": "eas build --platform ios --profile production",
    "build:android:dev": "eas build --platform android --profile development",
    "build:android:prod": "eas build --platform android --profile production",
    "build:all": "eas build --platform all --profile production",
    "submit:ios": "eas submit --platform ios",
    "submit:android": "eas submit --platform android",
    "submit:all": "eas submit --platform all",
    "prebuild": "expo prebuild",
    "prebuild:clean": "expo prebuild --clean"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "1.18.2",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-navigation/native": "^6.1.0",
    "@react-navigation/stack": "^6.3.0",
    "@sentry/react-native": "^6.20.0",
    "@types/crypto-js": "^4.2.2",
    "babel-plugin-module-resolver": "^5.0.2",
    "crypto-js": "^4.2.0",
    "expo": "^53.0.20",
    "expo-av": "~13.4.0",
    "expo-battery": "^9.1.4",
    "expo-blur": "^14.1.5",
    "expo-cellular": "^7.1.5",
    "expo-constants": "^17.1.7",
    "expo-device": "^7.1.4",
    "expo-file-system": "~15.4.0",
    "expo-haptics": "~12.4.0",
    "expo-image": "~2.4.0",
    "expo-in-app-purchases": "~14.3.0",
    "expo-linear-gradient": "^14.1.5",
    "expo-modules-core": "^2.5.0",
    "expo-network": "~5.4.0",
    "expo-notifications": "^0.31.4",
    "expo-screen-orientation": "^8.1.7",
    "expo-sensors": "~12.3.0",
    "expo-status-bar": "~1.6.0",
    "firebase": "^10.14.1",
    "lottie-react-native": "^7.3.2",
    "react": "18.2.0",
    "react-native": "^0.72.17",
    "react-native-chart-kit": "^6.12.0",
    "react-native-gesture-handler": "~2.12.0",
    "react-native-purchases": "^7.28.1",
    "react-native-reanimated": "~3.3.0",
    "react-native-safe-area-context": "4.6.3",
    "react-native-screens": "~3.22.0",
    "react-native-sound": "^0.11.2",
    "react-native-vector-icons": "^10.0.0",
    "expo-dev-client": "~5.2.4"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@react-native-community/eslint-config": "^3.2.0",
    "@testing-library/jest-native": "^5.4.0",
    "@testing-library/react-native": "^12.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^24.2.1",
    "@types/react": "~18.2.14",
    "@types/react-native": "~0.72.0",
    "@types/sharp": "^0.31.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "detox": "^20.0.0",
    "eslint": "^8.45.0",
    "eslint-config-expo": "^7.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-expo": "~49.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "sharp": "^0.34.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.1.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "jest-expo",
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg)"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-native/extend-expect"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/coverage/**",
      "!**/node_modules/**",
      "!**/__tests__/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "private": true
}
