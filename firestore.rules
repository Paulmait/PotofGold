rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Game progress - users can only access their own data
    match /gameProgress/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Skin collections - users can only access their own
    match /skinCollections/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Camp data - users can only access their own
    match /campData/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Mission progress - users can only access their own
    match /missionProgress/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Season pass data - users can only access their own
    match /seasonPass/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Daily streak data - users can only access their own
    match /dailyStreaks/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Power-up data - users can only access their own
    match /powerUps/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Analytics data - users can only access their own
    match /analytics/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public game data (read-only for all authenticated users)
    match /publicGameData/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // No one can write to public data
    }
    
    // Admin data (only for admin users)
    match /admin/{document=**} {
      allow read, write: if request.auth != null && 
        request.auth.token.admin == true;
    }
  }
} 